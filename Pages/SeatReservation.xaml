<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_18295_Group9_Harneet_Ziwei_Samira.Pages.SeatReservation"
             Title="SeatReservation">

    
    <ScrollView>
        <VerticalStackLayout
               >

            <Label  Text="Book Your Seat"
                    FontSize="Large"
                    HorizontalOptions="Center"
                    Padding="20"
                    />
            <Label  Text="Please choose the number of tickets."
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Padding="20"
                    />
            <HorizontalStackLayout>

                <Label  Text="Please choose the number of tickets for kids (under 12 years old)."
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Padding="20"
                    />
                <Stepper x:Name="Kid_Stepper"
                     Maximum="360"
                 Increment="1"
                 HorizontalOptions="Center"
                 ValueChanged="Kid_Stepper_ValueChanged"         />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label  Text="Please choose the number of tickets for adults."
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Padding="20"
                    />
                <Stepper x:Name="Adult_Stepper"
                     Maximum="360"
                 Increment="1"
                 HorizontalOptions="Center"
                 ValueChanged="Adult_Stepper_ValueChanged"      />
            </HorizontalStackLayout>

            <ListView x:Name="SeatsListView"
                      RowHeight="150"
                      ItemSelected="SeatsListView_ItemSelected" 

                      >
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                           
                                <FlexLayout Direction="Row"
            AlignItems="Center"
            JustifyContent="SpaceEvenly"
                                VerticalOptions="Start"
                                >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        
                                        <RowDefinition />
                                        <RowDefinition  />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>




                                    <Image Source="{Binding SeatPhoto}"
                                       HeightRequest="25"
                                       WidthRequest="25"
                                           Grid.ColumnSpan="2"
                                          
                                       
                                       />
                                <Label Text="{Binding RowName}"
                                       VerticalOptions="Start"
                                       Grid.Row="1"
                                       

                                       />
                                <Label Text="{Binding SeatNumberinRow}"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                      

                                       />
                                </Grid>

                            </FlexLayout>

                        </ViewCell>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

