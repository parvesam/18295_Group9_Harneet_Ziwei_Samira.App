<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_18295_Group9_Harneet_Ziwei_Samira.Pages.SeatReservation"
             Title="SeatReservation">
    <ScrollView>
        <VerticalStackLayout
               >

            <Label  Text="Choose your Seat"
                    FontSize="Large"
                    HorizontalOptions="Center"
                    Padding="20"
                    />
           
            <ListView x:Name="SeatListView"
                      RowHeight="150"
                      ItemSelected="SeatListView_ItemSelected"

                      >
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                            <VerticalStackLayout
                                VerticalOptions="Center"
                                >
                                <Image Source="chair.png"
                                       HeightRequest="150"
                                       WidthRequest="150"
                                       
                                       />
                                
                            </VerticalStackLayout>

                        </ViewCell>

                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
