<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_18295_Group9_Harneet_Ziwei_Samira.HomePage"
             Title="Home Page"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#6B5FF4">

    <VerticalStackLayout VerticalOptions="Center" Spacing="20">
        <Label 
            Text="Welcome to Cinemagic!"
            FontSize="Large"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Image Source="cinema.png"
               WidthRequest="250"
               />

        <Button 
            Clicked="Button_Clicked"
            BackgroundColor="#AD31D6"
            TextColor="Black"
            Text="Book Your Tickets!"
            WidthRequest="300"
            FontSize="30"
            />

    </VerticalStackLayout>
</ContentPage>